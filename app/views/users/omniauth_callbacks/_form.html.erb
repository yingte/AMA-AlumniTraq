<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

          

  <div class="mb-3">
    <%= form.label :email, class: "col-sm-2 col-form-label" %>
    <%= form.text_field :email, readonly: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :role_name, class: "col-sm-2 col-form-label" %>
    <%= form.select :role_id, Role.unprivileged.order(:name).map { |role| [role.name, role.id] }, include_blank: false, id: "id_of_the_role_id_select_box", class: "form-control" %>
  </div>

  <div class="row gx-3 mb-3">
    <!-- Form Group (first name)-->
    <div class="col-md-6">
      <%= form.label :first_name, class: "small mb-1 col-form-label" %>
      <%= form.text_field :first_name, placeholder: "First Name", class: "form-control" %>
    </div>
    <!-- Form Group (last name)-->
    <div class="col-md-6">
      <%= form.label :last_name, class: "small mb-1 col-form-label" %>
      <%= form.text_field :last_name, placeholder: "First Name", class: "form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :major_name, class: "col-sm-2 col-form-label" %>
    <%= form.select :major_id, Major.order(:name).map { |major| [major.name, major.id] }, include_blank: false, id: "id_of_the_major_id_select_box", class: "form-control" %>
  </div>

  <div class="row gx-3 mb-3">
    <!-- Form Group (first name)-->
    <div class="col-md-6">
      <%= form.label :graduation_year, class: "small mb-1 col-form-label" %>
      <%= form.text_field :graduation_year, placeholder: "Graduation Year", class: "form-control" %>
    </div>
    <!-- Form Group (last name)-->
    <div class="col-md-6">
      <%= form.label :phone, class: "small mb-1 col-form-label" %>
      <%= form.text_field :phone, placeholder: "Phone Number", class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Create Account", class: "button-89 btn-top-margin" %>
  </div>

  
<% end %>