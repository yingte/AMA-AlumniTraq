<h1>Advanced Search</h1>

<%= form_for @search, html: {class: "pure-form"} do |s| %>

    <div class="field">
      <%= s.label :first_name %> <br />
      <%= s.text_field :first_name %>
    </div>

    <div class="field">
      <%= s.label :last_name %> <br />
      <%= s.text_field :last_name %>
    </div>

    <div class="field">
      <%= s.label :major %> <br />
      <%= s.text_field :major %>
    </div>

    <div class="field">
      <%= s.label :graduation_year %> <br />
      <%= s.number_field :graduation_year %>
    </div>

    <div class="field">
      <%= s.label :job_title %> <br />
      <%= s.text_field :job_title %>
    </div>

    <div class="field">
      <%= s.label :employer %> <br />
      <%= s.text_field :employer %>
    </div>

    <div class="actions">
      <%= s.submit "Search", class: "pure-button pure-button-primary"%>
    </div>
<% end %>

<%= link_to 'Back', '/directory' %>

