<h1>Advanced Search</h1>

<%= form_for @search, html: {class: "pure-form"} do |form| %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

    <div class="field">
      <%= form.label :last_name %>
      <%= form.text_field :last_name %>
    </div>

    <div class="field">
      <%= form.label :major %>
      <!-- Changed major_id to major_name -->
      <%= form.select :major, Major.order(:name).map { |major| [major.name, major.id] }, include_blank: true, id: "id_of_the_major_id_select_box" %>
    </div>

    <div class="field">
      <%= form.label :graduation_year %>
      <%= form.number_field :graduation_year %>
    </div>

    <div class="field">
      <%= form.label :job_category %>
      <%= form.text_field :job_category %>
    </div>

    <div class="field">
      <%= form.label :job_title %>
      <%= form.text_field :job_title %>
    </div>

  <div class="field">
    <%= form.label :employer %>
    <%= form.text_field :employer %>
  </div>

    <div cformass="actions">
      <%= form.submit "Search", class: "pure-button pure-button-primary"%>
    </div>
<% end %>
