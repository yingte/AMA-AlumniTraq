<p id="notice"><%= notice %></p>

<h1>Event Attendees</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_attendees.each do |event_attendee| %>
      <tr>
        <td><%= event_attendee.meeting.name %></td>
        <td><%= event_attendee.user.first_name %> <%= event_attendee.user.last_name %></td>
        <td><%= link_to 'Show', event_attendee %></td>
        <td><%= link_to 'Edit', edit_event_attendee_path(event_attendee) %></td>
        <td><%= link_to 'Destroy', event_attendee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

