<main id="login-main">
    <%= form_with url: login_path do |form| %>
        <h1>Login</h1>

        <% if flash.alert %>
            <div>
                <%= flash.alert %>
            </div>
        <% end %>

        <div>
            <%= form.label :email %>
            <% if @email %>
                <%= form.text_field :email, value: @email %>
            <% else %>
                <%= form.text_field :email %>
            <% end %>
        </div>

        <div>
            <%= form.label :password %>
            <%= form.password_field :password %>
        </div>

        <div class="oauth-button">Continue with Google</div>
        <div class="oauth-button">Continue with Facebook</div>
        <div class="oauth-button">Continue with LinkedIn</div>

        <p>Don't have an account? <span><%= link_to "Sign Up", new_user_path %></span> </p>

        <div>
            <%= form.submit "Sign In" %>
        </div>
    <% end %>
</main>